{
  "expect": {
    "timeout": 5000
  },
  "fullyParallel": true,
  "forbidOnly": true,
  "retries": 1,
  "workers": 4,
  "reporter": [
    ["html"],
    ["junit", { "outputFile": "test-results.xml" }]
  ],
  "use": {
    "baseURL": "http://localhost:5275",
    "trace": "on-first-retry",
    "screenshot": "only-on-failure",
    "video": "retain-on-failure"
  },
  "projects": [
    {
      "name": "chromium",
      "use": {
        "channel": "chrome"
      }
    },
    {
      "name": "firefox",
      "use": {
        "browserName": "firefox"
      }
    },
    {
      "name": "webkit",
      "use": {
        "browserName": "webkit"
      }
    }
  ]
}
